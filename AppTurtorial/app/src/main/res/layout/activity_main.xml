<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_testing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testing"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="#006600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/img_phone"
        app:layout_constraintDimensionRatio="600:600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_testing"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="10dp"
        android:text="Price: 1000$"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/text_testing" />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:text="Samsung Galaxy Note 9"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/text_price" />
    <TextView
        android:id="@+id/text_dimention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Dimention: 1200x1200"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />
    <TextView
        android:id="@+id/text_dimention0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Dimention: 1200x1200"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/text_dimention" />
    <TextView
        android:id="@+id/text_dimention1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Dimention: 1200x1200"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/text_dimention0" />
    <TextView
        android:id="@+id/text_dimention2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Dimention: 1200x1200"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_phone"
        app:layout_constraintTop_toBottomOf="@+id/text_dimention1" />
    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text_testing"
        app:layout_constraintLeft_toLeftOf="parent">

    <Button
        android:id="@+id/btn_home"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/button_custom"
        android:text="HOME"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_buynow"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_custom"
        android:text="BUY NOW"
        app:layout_constraintStart_toEndOf="@id/btn_home"/>

    <Button
        android:id="@+id/btn_detail"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:text="DETAIL"
        android:background="@drawable/button_custom"
        app:layout_constraintStart_toEndOf="@id/btn_buynow"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>