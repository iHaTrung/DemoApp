<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tinh hinh hop"
            android:gravity="center_horizontal"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/chieurong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chieu rong"/>
        <EditText
            android:id="@+id/chieudai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chieu dai"/>
        <EditText
            android:id="@+id/chieucao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chieu cao"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Button
                android:id="@+id/btnDientich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Dien tich"/>
            <Button
                android:id="@+id/btnThetich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="The tich"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ketqua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ket qua"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>