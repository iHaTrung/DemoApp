<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/text_platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the platform you like:"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/cb_iphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="IPhone" />

        <CheckBox
            android:id="@+id/cb_android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Android" />

        <CheckBox
            android:id="@+id/cb_windowmobile"
            android:layout_width="411dp"
            android:layout_height="46dp"
            android:checked="false"
            android:text="Window Mobile" />
        <TextView
            android:id="@+id/text_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/cb_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Male" />
        <CheckBox
            android:id="@+id/cb_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Female" />
        <TextView
            android:id="@+id/text_ratinglove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate your girl/guy in love with you:"
            android:textSize="25sp"/>
        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_yourcountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your country:"
            android:textSize="25sp"/>
        <Spinner
            android:id="@+id/spinner_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_youruni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your university:"
            android:textSize="25sp"/>
        <Spinner
            android:id="@+id/spinner_uni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_yourfavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your favorite:"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/cb_tennis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Tennis" />
        <CheckBox
            android:id="@+id/cb_running"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Running" />
        <CheckBox
            android:id="@+id/cb_swimming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Swimming" />
        <CheckBox
            android:id="@+id/cb_sleeping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Sleeping" />
        <CheckBox
            android:id="@+id/cb_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Reading" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />
        <TextView
            android:id="@+id/platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>